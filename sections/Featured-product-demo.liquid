
    <h3 style="text-align:{{ section.settings.align_radio}}">{{section.settings.text}}</h3>



{% schema %}
{
    "name":"align text example",
    "settings":[
    {
          "type":"text",
          "id":"text",
          "label":"enter any text",
          "default":"WELCOME"
    },
    {
        "type":"radio",
        "id":"align_radio",
        "options":[
          {
            "value":"left",
            "label":"left"
          },
          {
            "value":"right",
            "label":"right"
          },
          {
            "value":"center",
            "label":"center"
          }
        ],
        "default":"left",
        "label":"choose alignment of text"
    },
      {
        "type":"range",
        "id":"font_size",
        "min":10,
        "max":50,
        "unit":"px",
        "step":1,
        "label":"font size",
        "default":25
      }
    ],
    "presets":[{
        "name":"align text example"
    }]
}
{% endschema %}