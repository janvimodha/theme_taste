<div class="advs_section_left">
  <div class="adv_review_main">

    {% for block in section.blocks %}
      {% if block.type == 'review-box' %}
        <div class="review_box_ctm">
          {% if section.settings.show_reviews %}
           <h4>⭐⭐⭐⭐⭐</h4>
          {% endif %}
          <h4>{{ block.settings.review_heading }}</h4>
          <p>{{ block.settings.review_desc }}</p>
          <p>{{ block.settings.reviewer_name }}</p>
          {% render verified-buyer %}
          <p>{{ block.settings.verified_text }}</p>
        </div>
      {% endif %}
    {% endfor %}
  
</div>
</div>
{% schema %}
  {
    "name": "Review",
    "class":"adv_review",
    "settings": [
      
    ],
    "blocks":[{
      "type":"review-box",
      "name":"Review box",
      "settings":[
        {
        "type":"html",
        "id":"review_heading",
        "label":"Heading"
      },
      {
        "type":"html",
        "id":"review_desc",
        "label":"Description"
      },
      {
        "type":"text",
        "id":"reviewer_name",
        "label":"User Name"
      },
      {
        "type":"text",
        "id":"verified_text",
        "label":"Verified Text",
        "default":"Verified Buyer"
      }
      ]
    }
      
    ]
  }
{% endschema %}

